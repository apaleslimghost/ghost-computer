<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2 class="field">
    <%= form.text_field :title, placeholder: 'New post' %>
  </h2>

  <div class="field">
      <%= text_field_tag :tags, post.tags.map(&:name).join(', '), placeholder: 'Tags...' %>
  </div>

  <div class="field">
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
